<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sagar.android_projects.languagesupport.Launcher"
    tools:showIn="@layout/activity_launcher">

    <Button
        android:id="@+id/button_language_change_inside_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/language_change_inside_app"
        app:layout_constraintBottom_toTopOf="@+id/button_language_change_in_device"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/button_language_change_in_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/language_change_in_device"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_language_change_inside_app"/>

</android.support.constraint.ConstraintLayout>
